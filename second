#include <stdio.h>

int main()
{
    char colors[3][10] = {"pink", "red", "yellow"};
    
    // вывод до изменения
    for (int i = 0; i < 3; i++) {
        printf("%s\n", colors[i]);
    }
    printf("\n");
    // изменение "red" на "green"
    strcpy(colors[1], "green");
    
    // вывод после изменения
    for (int i = 0; i < 3; i++) {
        printf("%s\n", colors[i]);
    }
    
    return 0;
}
